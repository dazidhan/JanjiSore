<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/ivDrink"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@android:drawable/ic_menu_gallery"
        android:background="@color/light_beige"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/tvDrinkName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drink Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark" />

        <TextView
            android:id="@+id/tvDrinkDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="12sp"
            android:textColor="@color/text_gray"
            android:layout_marginTop="4dp" />

        <!-- Indicator panas/dingin -->
        <TextView
            android:id="@+id/tvTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hot"
            android:textSize="10sp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:background="@color/warm_red"
            android:textColor="@color/white"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvDrinkPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 25.000"
            android:textSize="14sp"
            android:textColor="@color/primary_brown"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="18sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:backgroundTint="@color/primary_brown"
        android:textColor="@color/white" />

</LinearLayout>